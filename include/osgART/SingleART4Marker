#ifndef OSGART_SINGLEART4MARKER
#define OSGART_SINGLEART4MARKER

// STL include
#include <string>
#include <vector>

// graphics include
#include "osgART/Export"
#include "osgART/Marker"

// AR Toolkit 4 include
#include <AR4/AR/AR.h>

namespace osgART {

	/**
	* \class SingleART4Marker
	*/
	class OSGART_EXPORT SingleART4Marker: public Marker
	{
	public:       
	    
		/** 
		* \brief default constructor.
		*
		*/
		SingleART4Marker();
		
		/**
		* \brief destructor.
		*/
		~SingleART4Marker();    

		bool initialise(ARPattHandle *arPattHandle, char* pattFile, double width, double centerX, double centerY);

		void update(AR3DHandle *ar3DHandle, ARMarkerInfo* markerInfo);
		
		int getPatternID();
		double getPatternWidth();
		double* getPatternCenter();
	    
		virtual void setActive(bool a);
	    	
		
		MarkerType getType() const;
		
	    
	protected: 
	
	    int             patt_id;
		double          patt_width;
		double          patt_center[2];
		double          patt_trans[3][4];
	};
};
#endif 
