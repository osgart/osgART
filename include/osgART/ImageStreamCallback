 /**
 *  \file  ImageStreamCallback
 *  \brief Handling callbacks mechanism
 *
 * Handling callbacks mechanism.
 */

#ifndef OSGART_IMAGESTREAMCALLBACK
#define OSGART_IMAGESTREAMCALLBACK 1

#include <osgART/Export>

#include <osg/NodeCallback>
#include <osg/ImageStream>
#include <osg/FrameStamp>

namespace osgART {
	
	class OSGART_EXPORT ImageStreamCallback : public osg::NodeCallback 
	{
	public:

		ImageStreamCallback(osg::ImageStream* imagestream);

		virtual void operator()(osg::Node* node, osg::NodeVisitor* nv);
		
	protected:
	
		int _framenumber;
		osg::ImageStream* _imagestream;
	
	};
}


#endif  // OSGART_IMAGESTREAMCALLBACK
