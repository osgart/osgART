/**
 *  \file  TrackerConfiguration
 *  \brief Types used in defining configuration of tracker data.
 *
 * Types used in defining configuration of tracker data.
 */

#ifndef OSGART_TRACKERCONFIGURATION
#define OSGART_TRACKERCONFIGURATION 1

#include <osg/Vec2s>

#include <osg/Referenced>

#include "osgART/Export"

#include <string>

namespace osgART {

	class OSGART_EXPORT TrackerConfiguration:public osg::Referenced {
	public:
	
		std::string config;
		
		TrackerConfiguration();
		virtual ~TrackerConfiguration();

	protected:
			int _id;
			
	};

};


#endif // OSGART_TRACKERCONFIGURATION
